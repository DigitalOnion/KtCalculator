<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="screen_title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="screen_detail" parent="screen_title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="calculator_display" parent="screen_title">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/calculator_display</item>
        <item name="android:textColor">@color/calculator_numbers</item>
    </style>


</resources>
